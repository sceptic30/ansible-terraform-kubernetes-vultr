apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: alertmanager-ingress
  namespace: monitoring
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: alertmanager.{{ domain_name }}
    http:
      paths:
      - path: /
        backend:
          serviceName: alertmanager-main
          servicePort: 9093