apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: grafana-ingress
  namespace: monitoring
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: grafana.{{ domain_name }}
    http:
      paths:
      - path: /
        backend:
          serviceName: grafana
          servicePort: 3000